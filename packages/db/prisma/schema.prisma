generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  name              String?
  image             String?
  sessionToken      String?
  bookMark          Issue[]  @relation("UserBookmarks")
  currentOpenIssue  Int
  currentAiQuestion Int
  openIssueLimit    Int
  aiQuestionLimit   Int
  currentPlan       String
  createdAt         DateTime @default(now())
}

model Issue {
  id           String   @id @default(uuid())
  repository   String
  url          String
  number       Int
  state        String
  title        String?
  body         String?
  comments     Int?
  labels       String[]
  bookmarkedBy User[]   @relation("UserBookmarks")
  createdAt    String?
  updatedAt    String?
}
